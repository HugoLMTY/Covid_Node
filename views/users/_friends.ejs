<div class="container">
    <form action="profil" class="row" method="GET">
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="friendName" placeholder="Nom d'utilisateur" aria-label="Nom d'utilisateur" aria-describedby="button-addon2">
            <button class="btn btn-context" type="submit" id="button-addon2">Chercher</button>
          </div>
    </form>

    <table class="container">
        <% Users.forEach(user => { %>     
            <form action="/users/sendInvite" method="POST">
            <tbody>
                    <tr class="userInfos row">
                        <td class="col-5"> <%= user.name %> </td>
                        <td class="col-5"> <%= user.mail %> </td>
                        <td class="col-1"> 
                            <button type="submit" name="userID" class="btn btn-context"
                             value="<%= user._id %>">
                                <i class="bi bi-person-plus-fill"></i> <br> Ajouter
                            </button>
                        </td>
                    </tr>
                </tbody>
            </form> 
            <% })%>
        
    </table>


</div>