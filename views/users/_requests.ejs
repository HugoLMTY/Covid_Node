<table class="container">
    <% Users.forEach(user => { %>     
        <form action="/users/sendRequest" method="POST">
            <tr>
                <th> <%= user.name %> </th>
                <th> <%= user.mail %> </th>
                <th> <%= user.status %> </th>
                <th class="col"> 
                    <button type="submit" name="userID" value="<%= user._id %>">

                        <i class="bi bi-person-x-fill"></i> 
                    </button>
                </th>
            </tr>
        </form> 
        <% })%>
    
</table>